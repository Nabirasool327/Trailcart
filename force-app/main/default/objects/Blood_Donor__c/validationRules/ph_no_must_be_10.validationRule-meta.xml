<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ph_no_must_be_10</fullName>
    <active>false</active>
    <errorConditionFormula>OR(LEN( Phone_number__c ) &lt;&gt; 10, NOT( ISNUMBER( Phone_number__c )))</errorConditionFormula>
    <errorMessage>phone num must be equal to 10 digits</errorMessage>
</ValidationRule>
